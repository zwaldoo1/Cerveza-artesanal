---
import BaseLayout from "../layout/BaseLayout.astro";
import { products } from "../lib/products";
---
<BaseLayout title="Catálogo — CervezaArtesana">
  <h1 class="text-3xl font-bold mb-6">Catálogo</h1>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {products.map((p) => (
      <article class="rounded-lg border border-slate-200/70 overflow-hidden">
        <img src={p.image} alt={p.name} class="aspect-square object-cover" loading="lazy" />
        <div class="p-4">
          <h3 class="font-semibold text-lg">{p.name}</h3>
          <p class="text-sm opacity-80">{p.description}</p>
          <div class="mt-3 font-semibold">${p.price.toLocaleString("es-CL")}</div>
        </div>
      </article>
    ))}
  </div>
</BaseLayout>
